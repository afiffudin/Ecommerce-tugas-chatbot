<!DOCTYPE html>
<html>
<head>
  <title>List Pembelian</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-white">

<div class="container mt-5">
  <div class="card bg-secondary shadow">
    <div class="card-header">Data Pembelian</div>
    <div class="card-body">
      <table class="table table-dark table-striped">
        <tr>
          <th>Produk</th>
          <th>Jumlah</th>
          <th>Total</th>
          <th>Status</th>
          <th>Aksi</th>
        </tr>
        <% data.forEach(d => { %>
        <tr>
          <td><%= d.nama_produk %></td>
          <td><%= d.jumlah %></td>
          <td>Rp <%= d.total_harga %></td>
          <td><%= d.status %></td>
          <td>
            <% if(d.status === 'AKTIF'){ %>
              <a href="/cancel/<%= d.id %>" class="btn btn-danger btn-sm">Cancel</a>
            <% } %>
            <a href="/export/<%= d.id %>" class="btn btn-info btn-sm">PDF</a>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
  </div>
</div>

</body>
</html>
